#!/bin/sh

for source in $(pactl list sources | awk '/Name:/ {print $2}'); do
    pactl set-source-mute $source toggle
done

muted=$(pactl list sources | awk '/Mute:/ {print $2}' | head -n1)
if [ "$muted" = "yes" ]; then
    dunstify -h string:x-dunst-stack-tag:microphone "Sources" "MUTED ðŸ”‡"
elif [ "$muted" = "no" ]; then
    dunstify -h string:x-dunst-stack-tag:microphone "Sources"  "UNMUTED ðŸ”ˆ"
fi
